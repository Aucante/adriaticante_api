{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container my-5">
        <div class="row">
        {% for data in datas %}
                <div
                        class="col-6 col-md-4 col-xl-3 my-4"
                >
                        <a href="https://adriaticante.com/real-estate/{{ data.slug }}" target="_blank" class="text-white" style="text-decoration: none">
                                <div class="card rounded-3 shadow border-0 bg-secondary">
                                        <img
                                                src="#"
                                                class="card-img-top rounded-0"
                                                style="height: 200px"
                                                alt="#"
                                        />
                                        <div class="card-body">
                                                <h2
                                                        class="card-title text-center fs-6 display-6 fw-normal mb-4"
                                                >
                                                        {{ data.city.name }} · {{ data.city.country.name }}
                                                </h2>
                                                <div class="py-3 border-top">

                                                        <p class="card-text text-center display-6 fs-3 fw-bold gradient-data">
                                                                {{ data.price|number_format(0, '.', ' ') }} €
                                                        </p>
                                                </div>
                                        </div>
                                </div>
                        </a>
                </div>
        {% endfor %}
        </div>
</div>
{% endblock %}
